<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context=".TrailerMgmtActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="top"
        android:touchscreenBlocksFocus="false"
        android:measureWithLargestChild="false">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="70dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Open"
                android:id="@+id/uxcmdOpen"
                android:layout_weight="1"
                android:background="@color/actionOs"
                android:textColor="@color/actionOsText"
                android:textSize="18dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Close"
                android:id="@+id/uxcmdClose"
                android:layout_weight="1"
                android:background="@color/actionRd"
                android:textColor="@color/actionRdText"
                android:textSize="18dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Unload"
                android:id="@+id/uxcmdUnload"
                android:layout_weight="1"
                android:background="@color/actionTrailerUnload"
                android:textColor="@color/actionTrailerUnloadText"
                android:textSize="18dp" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="70dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Unload Complete"
                android:id="@+id/uxcmdUnloadComplete"
                android:layout_weight="1"
                android:background="@color/actionTrailerUnloadComplete"
                android:textColor="@color/actionTrailerUnloadCompleteText"
                android:textSize="18dp" />
            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
            <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>
</RelativeLayout>