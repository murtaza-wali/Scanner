<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context=".SortLabelActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/uxPrinterIPWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/printerIPWrapper" >
        <EditText
            android:id="@+id/uxPrinterIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/printerIPWrapper"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColorHint="@android:color/transparent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/uxCodeWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/codeWrapper" >
        <EditText
            android:id="@+id/uxTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/codeWrapper"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColorHint="@android:color/transparent" />
    </android.support.design.widget.TextInputLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uxWebView" />

</LinearLayout>